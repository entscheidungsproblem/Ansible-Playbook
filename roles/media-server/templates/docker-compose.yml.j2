---
version: '2'
services:
  sonarr:
    image:  linuxserver/sonarr
    container_name: sonarr
    depends_on:
      - jackett
    links:
      - jackett
    volumes:
      - "{{ storage.root }}"/config/sonarr:/config
      - "{{ storage.root }}"/tv:/tv
      - "{{ storage.root }}"/downloads/complete/tv:/downloads
      - /etc/localtime:/etc/localtime:ro
    # - "{{ storage.root }}"/downloads/complete/tv_import:/tv_import
    ports:
      - "{{ sonarr_port }}":8989
    environment:
      - PUID=${PUID}
      - PGID=${PGID
      - TZ=${TZ}  
    restart:  always